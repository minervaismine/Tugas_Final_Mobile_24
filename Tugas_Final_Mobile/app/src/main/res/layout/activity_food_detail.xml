<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FoodDetailActivity"
    android:background="#FFF"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Details"
        android:textStyle="bold"
        android:textColor="#EE9545"
        android:textSize="20sp"
        android:fontFamily="@font/nunito_bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tv_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="#EE9545"
        android:fontFamily="@font/nunito_bold"
        android:layout_gravity="center_horizontal"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="16dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_menu_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/contoh"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition Facts :"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="#EE9545"
        android:fontFamily="@font/nunito_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_background"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="17dp"
                android:paddingLeft="30dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/fire"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_menu_calories"
                        android:text="25 g"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#FFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calorie"
                        android:textSize="14dp"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="17dp"
                android:paddingRight="30dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/boiled_egg"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_menu_protein"
                        android:text="25 g"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#FFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="17dp"
                android:paddingLeft="30dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/nuts"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_menu_fat"
                        android:text="25 g"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#FFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fat"
                        android:textSize="14dp"
                        android:textColor="#FFF"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="17dp"
                android:paddingRight="30dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/rice"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="7dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_menu_carbs"
                        android:text="25 g"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#FFF"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carbs"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:textColor="#FFF"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_to_favorite"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#EE9545"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:text="ADD TO FAVORITE>>"
        android:fontFamily="@font/nunito_bold"/>

    <Button
        android:id="@+id/btn_delete_from_favorite"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#EE9545"
        android:visibility="gone"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="30dp"
        android:text="DELETE FROM FAVORITE>>"
        android:fontFamily="@font/nunito_bold"/>
</LinearLayout>